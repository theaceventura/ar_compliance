# Database
DATABASE_URL=sqlite:///./o365_connector.db

# Logging
LOG_LEVEL=INFO

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=300

# Retry tuning
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=1.0
RETRY_BACKOFF_JITTER=0.5

# Feature flags
DEFENDER_ENABLED=false

# Tenant client secrets
# Format: O365_SECRET_<TENANT_ID_SANITIZED>
# Example:
# O365_SECRET_12345678_90AB_CDEF=supersecret
